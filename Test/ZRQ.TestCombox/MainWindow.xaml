<Window x:Class="ZRQ.TestCombox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZRQ.TestCombox"
        xmlns:uiEx="clr-namespace:ZRQ.UI.UIExtensions;assembly=ZRQ.UI"
        xmlns:testCombobox="clr-namespace:ZRQ.TestCombobox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <testCombobox:MainWindowsModel></testCombobox:MainWindowsModel>
    </Window.DataContext>

    <StackPanel
        Orientation="Vertical">
        <ComboBox 
            Margin="5"
            SelectedValue="{Binding Path=DisplayStyle}"
            ItemsSource="{Binding Source={uiEx:EnumBindingSource {x:Type local:DisplayStyle}}}"></ComboBox>
    </StackPanel>
    
</Window>
