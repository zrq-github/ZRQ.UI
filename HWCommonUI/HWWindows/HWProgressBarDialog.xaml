<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RQ.HWWindows"
        xmlns:HWControls="clr-namespace:RQ.UI" x:Class="RQ.HWWindows.HWProgressBarDialog"
        mc:Ignorable="d"
        Title="进度条" Height="160" Width="455" Closing="Window_Closing" Closed="Window_Closed" ResizeMode="NoResize">
    <StackPanel x:Name="stackPanel">
        <HWControls:HWProgressBar x:Name="hwBar" ProgressHint="{Binding Hint,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ProgressDetails="{Binding Details}" Margin="5,5,5,5" Value="{Binding CurValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Maximum="{Binding MaxValue}" Width="Auto"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="取消" Height="25" Width="75" Margin="20,0,10,0" Click="btnClose_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
