<UserControl x:Class="RQ.UI.HWProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RQ.UI"
             mc:Ignorable="d" d:DesignWidth="265" Width="265" Height="85" Unloaded="UserControl_Unloaded" ContextMenuClosing="UserControl_ContextMenuClosing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="progressHint" Text="正在干什么.."  VerticalAlignment="Center" Margin="2,0,2,0"/>
        <ProgressBar Grid.Row="1" x:Name="progressBar" Value="50" Maximum="100" Minimum="0" Height="30" />
        <TextBlock Grid.Row="2" x:Name="progressDetails" Text="生成了多少......" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2,0,2,0"/>
    </Grid>
</UserControl>
