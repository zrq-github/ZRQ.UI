<Window x:Class="WPFCommonUI.Windows.HWProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCommonUI.Windows"
        mc:Ignorable="d"
        Title="进度条" MinHeight="100" MinWidth="300" Height="140" Width="455" Closed="Window_Closed" Closing="Window_Closing" >
    <Grid>
        <ProgressBar x:Name="progressBar" Height="30" VerticalAlignment="Top" Margin="20,30,20,0" ValueChanged="progressBar_ValueChanged"/>
        <Label x:Name="labHint" Content="正在生成中" HorizontalAlignment="Left" Margin="20,5,0,0" VerticalAlignment="Top" Width="{Binding Width, ElementName=progressBar}"/>
        <Label x:Name="labProgress" Content="正在生成中..." HorizontalAlignment="Left" Margin="20,65,0,0" Width="{Binding Width, ElementName=progressBar}" VerticalAlignment="Top"/>
        <StackPanel Height="30" Margin="0,0,0,0" VerticalAlignment="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="btnClose" Content="关闭" Margin="10,5,0,5" Width="75" Click="btnClose_Click" />
            <Button x:Name="btnOK" Content="确定" Margin="10,5,0,5" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
