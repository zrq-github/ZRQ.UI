<Window x:Class="ZRQ.WPF.DataGridSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZRQ.WPF.DataGridSample"
        mc:Ignorable="d"
        Title="DataGridSample"
        Width="220"
        Height="550">
    <Grid>
        <StackPanel
            Orientation="Vertical">
            
            <Button
                x:Name="btn_GroupSample"
                Content="分组测试"
                Margin="10"
                VerticalAlignment="Top"
                Click="btn_GroupSample_Click" />

            <Button
                Margin="10"
                x:Name="btn_dynamicCell"
                Content="动态列测试"
                Click="btn_dynamicCell_Click"></Button>

        </StackPanel>
    </Grid>
</Window>
